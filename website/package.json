{
  "name": "@transmute/website",
  "version": "0.1.0",
  "description": "Marketing website for Transmute Core game engine",
  "scripts": {
    "dev": "pnpm run copy-assets && next dev -p 3004",
    "build": "pnpm run copy-assets && next build",
    "start": "next start -p 3004",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "copy-assets": "mkdir -p public && cp ../assets/favicon.svg public/favicon.svg && cp ../assets/og-image.svg public/og-image.svg"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "lucide-react": "^0.263.1",
    "next": "^15.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^16.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.1.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3"
  }
}
